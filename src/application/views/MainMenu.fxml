<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.MainMenuController">
   <bottom>
      <VBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefHeight="20.0" prefWidth="386.0" text="Note: You can hover over a button for help">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button id="launch" fx:id="_launchButton" mnemonicParsing="false" onAction="#onLaunchButtonPressed" prefHeight="75.0" text="Launch the Tool">
               <font>
                  <Font size="24.0" />
               </font>
               <tooltip>
                  <Tooltip text="Start using the tool">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Tooltip>
               </tooltip>
            </Button>
         </children>
      </VBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefHeight="30.0" prefWidth="747.0" text="Welcome to VARpedia, a Visual, Aural, Reading Encyclopedia!">
               <font>
                  <Font size="24.0" />
               </font></Label>
            <Label alignment="CENTER" text="Press the Button to Start">
               <font>
                  <Font size="24.0" />
               </font></Label>
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</BorderPane>
