<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.CreationSceneController">
   <center>
      <TextArea fx:id="_searchResultArea" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <VBox spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="_previewSpeech" mnemonicParsing="false" onAction="#onPreviewPressed" text="Preview Speech" />
            <Button fx:id="_saveCurrent" mnemonicParsing="false" onAction="#onSaveCurrentPressed" text="Save Current Selection" />
            <Button fx:id="_combineAudio" mnemonicParsing="false" onAction="#onCombineAudioPressed" text="Combine All" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
   </right>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Here's the search result. You can select text, edit text, preview speech," />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="save the speech then combine all speech into creation" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
   </top>
   <bottom>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Or, simply enter the number of line you want to include in the speech:" />
            <HBox alignment="CENTER" spacing="8.0">
               <children>
                  <TextField fx:id="_inputLine" />
                  <Button fx:id="_confirmLine" mnemonicParsing="false" onAction="#onConfirmLinePressed" text="Confirm" />
               </children>
               <VBox.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </HBox>
            <Button fx:id="_cancelCreation" mnemonicParsing="false" onAction="#onCancelPressed" text="Cancel Creation" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
   </bottom>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</BorderPane>
