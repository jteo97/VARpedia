<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.CreationSceneController">
   <center>
      <TextArea fx:id="_searchResultArea" wrapText="true" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <VBox spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Max 40 Words for each preview">
               <font>
                  <Font size="16.0" />
               </font></Label>
            <Button fx:id="_previewSpeech" mnemonicParsing="false" onAction="#onPreviewPressed" prefWidth="206.0" text="Preview Speech">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="_combineAudio" mnemonicParsing="false" onAction="#onCombineAudioPressed" text="Combine and Continue">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="_cancelCreation" mnemonicParsing="false" onAction="#onCancelPressed" prefWidth="206.0" text="Cancel Creation">
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label fx:id="_selectedWordCount" layoutX="-4.0" layoutY="145.0" />
               </children>
            </AnchorPane>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
   </right>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Here's the search result. You can select text, edit text, preview speech,">
               <font>
                  <Font size="21.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="save the speech then combine all speech into creation">
               <font>
                  <Font size="21.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
   </top>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</BorderPane>
