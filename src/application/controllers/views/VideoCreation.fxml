<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.VideoCreationController">
   <children>
      <VBox>
         <children>
            <HBox spacing="8.0">
               <children>
                  <Label text="Enter term to search flickr:" />
                  <TextField fx:id="_searchField" promptText="Type here" />
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </HBox>
            <HBox spacing="8.0">
               <children>
                  <Label text="Enter number of images to download:" />
                  <TextField fx:id="_numField" promptText="Type here" />
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </HBox>
            <HBox spacing="8.0">
               <children>
                  <Label text="Enter name to call creation:" />
                  <TextField fx:id="_nameField" promptText="Type here" />
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </HBox>
            <ButtonBar>
              <buttons>
                  <Button fx:id="_cancelButton" mnemonicParsing="false" onAction="#onCancelButtonPressed" text="Cancel" />
                <Button fx:id="_createButton" mnemonicParsing="false" onAction="#onCreateButtonPressed" text="Create" />
              </buttons>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </ButtonBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
