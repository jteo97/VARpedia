<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.CreationListViewController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Here's the existing creations" />
            <Label text="Select any of them to play, delete, or create new creation" />
            <Label text="Total number of creations: 0" />
         </children>
      </VBox>
   </top>
   <center>
      <ListView fx:id="_creationList" onMouseClicked="#creationIsSelected" prefWidth="384.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <VBox alignment="CENTER" prefHeight="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="8.0">
               <children>
                  <Button fx:id="_playButton" disable="true" mnemonicParsing="false" onAction="#onPlayButtonPressed" text="Play Creation" />
                  <Button fx:id="_deleteButton" disable="true" mnemonicParsing="false" onAction="#onDeleteButtonPressed" text="Delete Creation" />
               </children>
            </HBox>
            <Button fx:id="_createButton" mnemonicParsing="false" onAction="#onCreateButtonPressed" text="Create New Creation" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
   </bottom>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</BorderPane>
