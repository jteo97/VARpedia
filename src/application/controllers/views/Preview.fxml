<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.PreviewController">
   <children>
      <Button fx:id="_playButton" layoutX="327.0" layoutY="89.0" mnemonicParsing="false" onAction="#onPlayButtonPressed" text="Play" />
      <Button fx:id="_saveButton" layoutX="237.0" layoutY="89.0" mnemonicParsing="false" onAction="#onSaveButtonPressed" text="Save" />
      <Button fx:id="_cancelButton" layoutX="14.0" layoutY="248.0" mnemonicParsing="false" onAction="#onCancelButtonPressed" text="Cancel" />
      <TextArea fx:id="_previewTextArea" layoutX="14.0" layoutY="39.0" prefHeight="200.0" prefWidth="200.0" />
      <ComboBox fx:id="_choiceOfVoice" layoutX="223.0" layoutY="39.0" prefWidth="150.0" promptText="Select a voice" />
      <Label layoutX="14.0" layoutY="14.0" text="Pick a voice and click play to preview " />
   </children>
</AnchorPane>
